<Ui xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.blizzard.com/wow/ui/">
	<Script file="XivBuffFrame.lua" />
	<Frame name="XivBuffFrame" virtual="true" parent="UIParent" movable="true" enableMouse="true" clipChildren="false">
		<Size x="244" y="200" />
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<Frames>
			<Frame frameLevel="2" hidden="false" name="XivBuffFrameDragOverlay">
				<Size x="244" y="200" />
				<Anchors>
					<Anchor point="CENTER" />
				</Anchors>
				<Layers>
					<Layer>
						<Texture>
							<Color r="0" g="1.0" b="0" a="0.5" />
						</Texture>
					</Layer>
				</Layers>
			</Frame>
			<Frame frameLevel="1" hidden="true" inherits="SecureAuraHeaderTemplate" name="XivBuffFrameAuras" clipChildren="false">			
				<Attributes>
					<Attribute name="minWidth" value="1" />
					<Attribute name="minHeight" value="1" />
					<Attribute name="sortMethod" value="TIME" />
					<Attribute name="sortDirection" value="-" />
					<Attribute name="separateOwn" value="1" />
					<Attribute name="wrapAfter" value="10" />
					<Attribute name="wrapXOffset" value="0" />
				</Attributes>
			</Frame>
		</Frames>
		<Scripts>
			<OnLoad>self:RegisterForDrag("LeftButton");</OnLoad>
			<OnDragStart function="Frame_OnDragStart" />
			<OnDragStop function="Frame_OnDragStop" />
		</Scripts>
	</Frame>
</Ui>